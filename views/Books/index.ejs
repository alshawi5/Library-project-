<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Books</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
      color: #333;
      padding: 20px;
    }
    h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #555;
    }
    .add-book {
      display: block;
      width: max-content;
      margin: 0 auto 20px auto;
      padding: 10px 20px;
      background-color: #333;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }
    .add-book:hover {
      background-color: #555;
    }
    ul {
      list-style: none;
      padding: 0;
      max-width: 800px;
      margin: 0 auto;
    }
    li {
      background-color: #e0e0e0;
      margin-bottom: 10px;
      padding: 15px;
      border-radius: 8px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    a {
      text-decoration: none;
      color: #333;
      font-weight: bold;
    }
    a:hover {
      color: #555;
    }
    .book-actions {
      display: flex;
      gap: 10px;
    }
    .book-actions form button {
      background-color: #c0392b;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 5px;
      cursor: pointer;
    }
    .book-actions form button:hover {
      background-color: #e74c3c;
    }
  </style>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>

  <h1>All Books</h1>

  <% if (user && user.role === 'admin') { %>
    <a href="/Books/new" class="add-book">Add New Book</a>
  <% } %>

  <ul>
    <% books.forEach((book) => { %>
      <li>
        <div>
          <strong><%= book.title %></strong> by <%= book.author %>  
          (<%= book.publishYear %>)  
          <% if (!book.isAvailable) { %>
            - <em>Not Available</em>
          <% } %>
        </div>
        <div class="book-actions">
          <a href="/Books/<%= book._id %>">See Details</a>
          <% if (user && user.role === 'admin') { %>
            <a href="/Books/<%= book._id %>/edit">Edit</a>
            <form action="/Books/<%= book._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          <% } %>
        </div>
      </li>
    <% }) %>
  </ul>
</body>
</html>
